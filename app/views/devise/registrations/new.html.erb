<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),:html => { :class => "form-horizontal", :id => "sign_in_form" }) do |f| %>
  <%= devise_error_messages! %>
<div class="control-group">
  <label class="control-label"><%= f.label :login %></label>
  <div class="controls"><%= f.email_field :email %></div>
</div>
<div class="control-group">
  <label class="control-label"><%= f.label :password %></label>
  <div class="controls"><%= f.password_field :password %></div>
</div>
<div class="control-group">
  <label class="control-label"><%= f.label :password_confirmation %></label>
  <div class="controls"><%= f.password_field :password_confirmation %></div>
</div>
  <div class="control-group controls"><%= f.submit "Sign up", :class =>'btn btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>
